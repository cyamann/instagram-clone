@model IEnumerable<Instagram_clone.Models.Post>

@{
    ViewData["Title"] = "Instagram Feed";
}

<style>
    /* Custom CSS to add padding at the top of the page */
    .custom-top-padding {
        padding-top: 20px; /* Adjust the value as needed */
    }

    /* Custom CSS to remove padding/margin between rows and posts */
    .custom-row {
        margin-bottom: 0; /* Remove margin between rows */
    }

    .custom-card {
        margin: 0; /* Remove margin inside cards */
    }
</style>

<body style="background-color: black; color: white;">
    <div class="container custom-top-padding">
        <!-- Add the custom class to the container -->
        <div class="container">
            <div class="container-fluid h-100 d-flex flex-column justify-content-center align-items-center">
                @for (var i = 0; i < Model.Count(); i += 3)
                {
                    <div class="row custom-row">
                        <!-- Add the custom class to the row -->
                        @for (var j = i; j < i + 3 && j < Model.Count(); j++)
                        {
                            var item = Model.ElementAt(j);
                            <div class="col-md-4">
                                <div class="card mb-4 custom-card" style="height: 700px; background-color: black;">
                                    <div class="d-flex align-items-center">
                                        <!-- Profile picture -->
                                        <div>
                                            <img src="~/assets/@item.user_profile_pic" class="rounded-circle" alt="Profile Picture" width="40" height="40">
                                        </div>
                                        <!-- User information -->
                                        <div class="ml-3">
                                            <h5 class="card-title" style="color: white;">@item.UserName</h5>
                                        </div>
                                    </div>

                                    <!-- Fixed size for images -->
                                    <img src="~/assets/@item.imageurl" class="card-img-top" alt="Image" style="width: 100%; height: 400px;">
                                    <div class="card-body">
                                        <!-- Action buttons for Like, Comment, and Message -->
                                        <div class="d-flex justify-content-between">
                                            <button class="btn btn-light like-button" style="background-color: black; color: white;"><i class="far fa-heart"></i> Like</button>
                                            <button class="btn btn-light" style="background-color: black; color: white;"><i class="far fa-comment"></i> Comment</button>
                                            <button class="btn btn-light" style="background-color: black; color: white;"><i class="far fa-envelope"></i> Message</button>
                                        </div>
                                        <p class="card-text">@item.description</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</body>
